{
  "promptDirs": [
    "${projectRoot}/.prompts",
    "node_modules/pupt/prompts"
  ],
  "historyDir": "${projectRoot}/.pthistory",
  "defaultCmd": "claude",
  "defaultCmdArgs": [
    "--permission-mode",
    "acceptEdits"
  ],
  "defaultCmdOptions": {
    "Continue with last context?": "--continue"
  },
  "autoReview": true,
  "autoRun": true,
  "gitPromptDir": "${projectRoot}/.git-prompts",
  "handlebarsExtensions": [],
  "version": "4.0.0",
  "outputCapture": {
    "enabled": false,
    "directory": "${projectRoot}/.pthistory",
    "maxSizeMB": 500,
    "retentionDays": 365
  },
  "autoAnnotate": {
    "enabled": false,
    "triggers": [
      "claude",
      "ai",
      "assistant"
    ],
    "analysisPrompt": "analyze-execution"
  }
}
