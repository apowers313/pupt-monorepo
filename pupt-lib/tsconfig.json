{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "@pupt/lib",
    "paths": {
      "@pupt/lib": ["./src/index.ts"],
      "@pupt/lib/*": ["./src/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*", "components/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
