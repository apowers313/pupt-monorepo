{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "pupt-lib",
    "paths": {
      "pupt-lib": ["./src/index.ts"],
      "pupt-lib/*": ["./src/*"]
    },
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "components/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
