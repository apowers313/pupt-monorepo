{
    "name": "pupt-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "PUPT monorepo - Powerful Universal Prompt Tool ecosystem",
    "scripts": {
        "build": "pnpm exec nx run-many --target=build",
        "test": "pnpm exec nx run-many --target=test",
        "coverage": "pnpm -r run coverage && ./tools/merge-coverage.sh",
        "coverage:merge": "./tools/merge-coverage.sh",
        "coverage:merge:ci": "./tools/merge-coverage.sh --ci",
        "lint": "pnpm exec nx run-many --target=lint",
        "lint:knip": "knip",
        "typecheck": "pnpm exec nx run-many --target=typecheck",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepush": "NX_DAEMON=false pnpm exec nx affected -t build lint test --base=origin/master --head=HEAD --parallel=3",
        "prepush:fast": "./tools/prepush.sh",
        "prepare": "husky"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "packageManager": "pnpm@10.0.0",
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "pnpm": {
        "auditConfig": {
            "ignoreCves": [
                "CVE-2026-26996"
            ]
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.29.0",
        "@nx/eslint": "22.3.3",
        "@nx/vite": "22.3.3",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^22.10.10",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "commitizen": "^4.3.1",
        "conventional-changelog-conventionalcommits": "^9.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.29.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.12.0",
        "husky": "^9.1.7",
        "jiti": "2.4.2",
        "knip": "^5.61.3",
        "lcov-result-merger": "^5.0.1",
        "nx": "22.3.3",
        "playwright": "^1.50.0",
        "prettier": "^3.4.2",
        "semantic-release": "^25.0.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.34.1",
        "vite": "^6.0.11",
        "vitest": "^3.2.4"
    }
}
