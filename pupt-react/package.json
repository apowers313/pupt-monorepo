{
  "name": "pupt-react",
  "version": "1.1.1",
  "description": "Headless React component library for pupt-lib integration",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/apowers313/pupt-react"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite",
    "dev:demo": "npx servherd start -n pupt-react-demo -t demo -e HTTPS_CERT={{httpsCert}} -e HTTPS_KEY={{httpsKey}} -- vite --config demo/vite.config.ts --port {{port}} --host {{hostname}}",
    "build:demo": "vite build --config demo/vite.config.ts",
    "lint": "eslint . --max-warnings 0 && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "clean": "rm -rf dist coverage",
    "prepare": "husky",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "pupt-lib": "^1.3.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@mantine/core": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@monaco-editor/react": "^4.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^13.1.0",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@tabler/icons-react": "^3.36.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/babel__standalone": "^7.1.9",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.4",
    "@vitest/coverage-v8": "^3.0.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "knip": "^5.43.3",
    "playwright": "^1.50.0",
    "pupt": "^2.0.1",
    "pupt-lib": "^1.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "semantic-release": "^25.0.0",
    "servherd": "^1.1.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.4"
  }
}
