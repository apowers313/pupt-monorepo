{
  "name": "@pupt/react",
  "version": "1.1.2",
  "description": "Headless React component library for pupt-lib integration",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/apowers313/pupt-monorepo.git",
    "directory": "pupt-react"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite",
    "dev:demo": "npx servherd start -n pupt-react-demo -t demo -e HTTPS_CERT={{httpsCert}} -e HTTPS_KEY={{httpsKey}} -- vite --config demo/vite.config.ts --port {{port}} --host {{hostname}}",
    "build:demo": "vite build --config demo/vite.config.ts",
    "lint": "eslint src test && tsc --noEmit",
    "lint:fix": "eslint src test --fix",
    "test": "vitest run",
    "test:ci": "vitest run --no-coverage --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "peerDependencies": {
    "@pupt/lib": "^1.3.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@mantine/core": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@monaco-editor/react": "^4.7.0",
    "@pupt/cli": "workspace:*",
    "@pupt/lib": "workspace:*",
    "@tabler/icons-react": "^3.36.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/babel__standalone": "^7.1.9",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "servherd": "^1.1.1",
    "vite-plugin-dts": "^4.5.0"
  }
}
